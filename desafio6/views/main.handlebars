<div class="container mt-3">
    <header>
        <h1 class="text-center" style="color:blue;">Productos</h1>
    </header>
    <main>
        <div class="form">
            <div class="jumbotron">
                <h2 style="color:blue;">Nuevo producto</h2>
                <br>
                <form action="/" method="post">
                    <div class="form-group">
                        <label for="title"><b>Nombre</b></label>
                        <input id="title" class="form-control" type="text" name="title">
                    </div>
                    <div class="form-group">
                        <label for="price"><b>Precio</b></label>
                        <input id="price" class="form-control" type="number" name="price" min="1" step="0.01">
                    </div>
                    <div class="form-group">
                        <label for="thumbnail"><b>Url de imagen</b></label>
                        <input id="thumbnail" class="form-control" type="url" name="thumbnail">
                    </div>
                    <button type="submit" class="btn btn-success mt-3 mb-5">Enviar</button>
                </form>
            </div>
        </div>

        <div class="list-products">

            <h2 style="color:blue;">Listado de productos</h2>
            {{#if productsExist}}
            <div class="table-responsive">
                <table class="table table-dark" id="tableProducts">
                    {{/if}}
                    {{#unless productsExist}}
                    <h3 class="alert alert-danger"> No hay productos</h3>
                    {{/unless}}

                </table>
            </div>
        </div>

        <div class="messages-chat">
            <h2 style="color:blue">Centro de mensajes</h3>
            <form class="form-inline" onsubmit="return addMessage(this)" autocomplete="off">
                <label for="email">Email⠀</label>
                <input type="email" id="email" class="form-control my-2 mr-2" placeholder="Ingresa tu email" required />
                <label for="message">Mensaje⠀</label>
                <input type="text" id="message" class="form-control my-2 mr-2" placeholder="Cuéntanos algo..."
                    required />
                <input class="btn btn-primary my-2" type="submit" value="Enviar!" />
            </form>
            <div class="col-auto mb-4" id="messages"></div>
        </div>
    </main>
    <footer>
        <p class="text-center">&copy; 2022 - Desafio 6</p>
    </footer>
</div>

<script src="../index.js"></script>