<div class="container mt-3">

<h1 style="color:blue;">Listado de productos</h1>
{{#if productsExist}}
<div class="table-responsive">
    <table class="table table-dark">
        <tr style="color: yellow;">
            <th>Nombre</th>
            <th>Precio</th>
            <th>Thumbnail</th>
        </tr>
        {{#each products}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.price}}</td>
            <td><img src="{{this.thumbnail}}" alt="Imagen del producto" style="width: 4rem;"></td>
        </tr>
        {{/each}}
        {{/if}}
        {{#unless productsExist}}
        <h3 class="alert alert-danger"> No hay productos</h3>
        {{/unless}}

        <br />
        <footer>
            <a href="/form"><button class="btn btn-success mt-3 mb-5">Ir a a√±adir producto</button></a>
        </footer>
        <br />
</div>